<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Guest</title>
    <!-- Bootstrap 4.1 CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <!-- FontAwesome 4.7 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-warning text-white">
                <h3 class="mb-0">Edit Guest</h3>
            </div>
            <div class="card-body">
                <form action="/guests/<%= roomId %>/edit/<%= guest.GuestBookID %>" method="POST">
                    <div class="form-group">
                        <label for="NamaTamu">Name:</label>
                        <input type="text" id="NamaTamu" name="NamaTamu" class="form-control" value="<%= guest.NamaTamu %>" required>
                    </div>

                    <div class="form-group">
                        <label for="EmailTamu">Email:</label>
                        <input type="email" id="EmailTamu" name="EmailTamu" class="form-control" value="<%= guest.EmailTamu %>">
                    </div>

                    <div class="form-group">
                        <label for="PhoneTamu">Phone:</label>
                        <input type="text" id="PhoneTamu" name="PhoneTamu" class="form-control" value="<%= guest.PhoneTamu %>">
                    </div>

                    <div class="form-group">
                        <label for="CheckInTime">Check-In Time:</label>
                        <input type="datetime-local" id="CheckInTime" name="CheckInTime" class="form-control" value="<%= guest.CheckInTime.toISOString().slice(0, 16) %>" required>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Update Guest
                    </button>
                    <a href="/guests/<%= roomId %>" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Back to Guest List
                    </a>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS & jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>
