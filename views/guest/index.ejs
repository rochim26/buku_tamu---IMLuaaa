<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guest List</title>
    <!-- Bootstrap 4.1 CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <!-- FontAwesome 4.7 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Guest List for Room <%= roomId %></h3>
            </div>
            <div class="card-body">
                <a href="/guests/<%= roomId %>/add" class="btn btn-success mb-3">
                    <i class="fa fa-plus"></i> Add Guest
                </a>

                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (guests.length > 0) { %>
                                <% guests.forEach((guest, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= guest.NamaTamu %></td>
                                        <td><%= guest.EmailTamu %></td>
                                        <td><%= guest.PhoneTamu %></td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="/guests/<%= roomId %>/edit/<%= guest.GuestBookID %>" class="btn btn-warning btn-sm">
                                                    <i class="fa fa-pencil"></i> Edit
                                                </a>
                                                <a href="/guests/<%= roomId %>/delete/<%= guest.GuestBookID %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">
                                                    <i class="fa fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center text-muted">No guests available.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <a href="/rooms" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Back to Room List
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS & jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>
