<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room List</title>
    <!-- Bootstrap 4.1 CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Room List</h1>
        
        <a href="/rooms/add" class="btn btn-primary mb-3">+ Add Room</a>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Room Number</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% rooms.forEach((room, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= room.RoomNumber %></td>
                            <td><%= room.Type %></td>
                            <td>
                                <div class="btn-group">
                                    <a href="/rooms/detail/<%= room.RoomID %>" class="btn btn-info btn-sm">Detail</a>
                                    <a href="/rooms/edit/<%= room.RoomID %>" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/rooms/delete/<%= room.RoomID %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                                </div>
                                <!-- Menampilkan QR Code -->
                                <img src="<%= room.qrCodeUrl %>" alt="QR Code" style="width:100px;height:100px;">
                                <!-- Link untuk mengunduh QR Code -->
                                <a href="<%= room.qrCodeUrl %>" download="Room-<%= room.RoomNumber %>-QR.png">Download QR</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS & jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>
